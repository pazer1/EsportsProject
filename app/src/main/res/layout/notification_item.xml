<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="58dp">

    <RelativeLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/team1img"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/team1Name"
            android:textAlignment="center"
            android:text="asdasdasdasdasdasdasdasdasdasdasdasdasdasdasd"
            android:layout_toRightOf="@id/team1img"
            android:maxLength="20"
            android:layout_marginStart="10dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/center_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/team1Name"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/team2img"
            android:layout_toRightOf="@id/team1img"
            android:text="vs"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/team2img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/team1Name"
            android:layout_alignParentBottom="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/team2Name"
            android:text="asdasdasdasd"
            android:layout_toLeftOf="@id/team2img"
            android:textDirection="anyRtl"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/team1img"
            android:maxLength="20"
            android:layout_marginStart="10dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@drawable/twitch_icon"
            android:id="@+id/view_image"
            android:visibility="gone"
            android:layout_toRightOf="@id/team2img"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:text="보러가기"
            android:layout_below="@id/view_image"
            android:layout_toRightOf="@id/team2img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



</LinearLayout>